<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <EditText
        android:id="@+id/editText7c"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:gravity="top"
        android:layout_margin="10dp"
        android:hint="Write post..."
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical" />


    <LinearLayout
        android:id="@+id/ciasd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText7c"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/citaddimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/image" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:layout_weight="11.77"
            android:gravity="center_vertical"
            android:text="Select image to post" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ciasd"
        android:orientation="horizontal">

        <Button
            android:id="@+id/postsubmit"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4d9c58"
            android:text="POST"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/postcancel"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#b0aeae"
            android:text="Cancel"
            android:textColor="#ffffff" />
    </LinearLayout>


</RelativeLayout>