<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alarma.example.com.alarmaph.helpactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:gravity="top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-10dp"
            app:srcCompat="@drawable/cebu" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="-10dp"
            android:background="@color/gray"
            android:gravity="center"
            android:padding="10dp"
            android:text="HELP TAB"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/policeHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#7e1f1f"
            android:padding="35dp"
            android:text="POLICE"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/fireHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#7e1f1f"
            android:padding="35dp"
            android:text="FIRE"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/medicalHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#7e1f1f"
            android:padding="35dp"
            android:text="AMBULANCE"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/firstAidHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#7e1f1f"
            android:padding="35dp"
            android:text="FIRST AID"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonforecast"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="20dp"
        android:paddingTop="0dp"
        android:background="#ffffff"
        android:text="Forecast"
        android:textAllCaps="false"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|right" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="79dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        app:layout_anchor="@+id/include"
        app:srcCompat="@drawable/weather" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="Rainy"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="25Â°"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="35dp"
        android:padding="5dp"
        android:text="Tuesday"
        android:textColor="#ffffff" />

    <include
        android:id="@+id/include"
        layout="@layout/content_helpactivity"
        android:layout_height="557dp" />

</android.support.design.widget.CoordinatorLayout>
