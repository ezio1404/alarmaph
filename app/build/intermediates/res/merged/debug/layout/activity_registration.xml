<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7e1f1f"
    tools:context="alarma.example.com.alarmaph.registration">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:backgroundTint="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-24dp"
        android:focusable="false"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="66dp"
            android:minHeight="180dp"
            app:srcCompat="@drawable/slogo1"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name1"
            android:layout_width="match_parent"
            android:textColorHint="#ffffff"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_bottom_line"
                android:ems="10"
                android:inputType="text"
                android:fontFamily="sans-serif"
                android:paddingTop="10dp"
                android:hint="Username"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name2"
            android:layout_width="match_parent"
            android:textColorHint="#ffffff"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#ffffff">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_bottom_line"
                android:ems="10"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"
                android:paddingTop="10dp"
                android:hint="Password"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffffff"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_bottom_line"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Firstname"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name4"
            android:layout_width="match_parent"
            android:textColorHint="#ffffff"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_bottom_line"
                android:ems="10"
                android:inputType="text"
                android:fontFamily="sans-serif"
                android:paddingTop="10dp"
                android:hint="Lastname"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name5"
            android:layout_width="match_parent"
            android:textColorHint="#ffffff"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_bottom_line"
                android:ems="10"
                android:inputType="text"
                android:fontFamily="sans-serif"
                android:paddingTop="10dp"
                android:hint="Email"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name6"
            android:layout_width="match_parent"
            android:textColorHint="#ffffff"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_bottom_line"
                android:ems="10"
                android:inputType="text"
                android:fontFamily="sans-serif"
                android:paddingTop="10dp"
                android:hint="Phone Number"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:text="Gender:"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <RadioGroup
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="14dp"
                android:layout_marginRight="15dp"
                android:textColor="#ffffff" />

             <RadioButton
                 android:id="@+id/radioButton2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Female"
                 android:textColor="#ffffff"
                 android:textSize="14dp" />
         </RadioGroup>
        </LinearLayout>


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:padding="15dp"
            android:text="REGISTER" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
