<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <TextView
        android:id="@+id/textViewp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:inputType="text|textMultiLine|textCapSentences"
        android:padding="20dp"
        android:text="ADD PERSON" />


    <ImageView
        android:id="@+id/addimgs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight="0.09"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        android:layout_below="@+id/textViewp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_red"
        android:ems="10"
        android:hint="Firstname"
        android:layout_below="@id/addimgs"
        android:inputType="textPersonName"
        android:padding="15dp" />


    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText7"
        android:ems="10"
        android:background="@drawable/bottom_red"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:hint="Lastname" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText3"
        android:ems="10"
        android:background="@drawable/bottom_red"
        android:padding="15dp"
        android:inputType="number"
        android:hint="Age" />


    <EditText
        android:id="@+id/editText5"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText9"
        android:background="@drawable/bottom_red"
        android:ems="10"
        android:inputType="number"
        android:hint="Contact #" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gender_select"
        android:orientation="horizontal"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="15dp"
            android:text="Gender:" />
        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/male123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="14dp"
                android:checked="true"
                android:layout_marginRight="15dp"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/female123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#000000"
                android:textSize="14dp" />
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:id="@+id/linearLayout3"
        android:layout_below="@+id/gender_select"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/dialogButtonOKp"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4d9c58"
            android:text="ADD"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/dialogButtonCancelp"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#b0aeae"
            android:text="Cancel"
            android:textColor="#ffffff" />
    </LinearLayout>


</RelativeLayout>